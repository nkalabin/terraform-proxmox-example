# =============================================================================
# ПРИМЕР НАСТРОЕК PROXMOX TERRAFORM
# Скопируйте этот файл в terraform.tfvars и измените под вашу среду
# =============================================================================

# =============================================================================
# ПОДКЛЮЧЕНИЕ К PROXMOX СЕРВЕРУ
# =============================================================================
# Эти настройки нужны для подключения к вашему Proxmox серверу
proxmox_api_url          = "https://your-proxmox-server:8006/api2/json"  # IP или домен вашего сервера
proxmox_api_token_id     = "user@pam!token-name"                        # ID токена из Proxmox
proxmox_api_token_secret = "your-token-secret"                           # Секретный ключ токена
proxmox_tls_insecure     = true                                          # true для тестов, false для продакшена

# =============================================================================
# НАСТРОЙКИ ВИРТУАЛЬНОЙ МАШИНЫ
# =============================================================================
# Основные параметры создаваемой VM
vm_name        = "debian-vm"                     # Имя виртуальной машины
vm_description = "Debian 13 VM создана с Terraform"
target_node    = "px01"                          # Узел Proxmox где будет создана VM
template_name  = "debian-13-template"           # Шаблон для клонирования
storage_name   = "local-lvm"                    # Хранилище для дисков VM

# =============================================================================
# РЕСУРСЫ ВИРТУАЛЬНОЙ МАШИНЫ
# =============================================================================
# Настройте ресурсы под ваши потребности
vm_cores   = 2                                   # Количество ядер CPU
vm_sockets = 1                                   # Количество сокетов CPU  
vm_memory  = 2048                                # Память в МБ (2048 = 2ГБ)
vm_disk_size = "20G"                             # Размер диска (20G = 20ГБ)

# =============================================================================
# СЕТЕВЫЕ НАСТРОЙКИ
# =============================================================================
vm_bridge   = "vmbr0"                            # Сетевой мост (обычно vmbr0)
vm_vlan_tag = null                               # VLAN тег (если нужен)

# Cloud-init Configuration - настройте пользователя и сеть
vm_user        = "cm"                            # ИЗМЕНИТЕ: имя пользователя
vm_password     = "debian"                       # ИЗМЕНИТЕ: пароль пользователя
vm_ssh_keys     = null                           # ИЗМЕНИТЕ: SSH ключи (рекомендуется)
vm_nameserver  = "8.8.8.8"                      # ИЗМЕНИТЕ: DNS сервер
vm_ip_config   = "dhcp"                          # ИЗМЕНИТЕ: "dhcp" или "static"

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# =============================================================================
# Кастомная конфигурация cloud-init (опционально)
# vm_cloud_init_custom = "user=admin,ipconfig0=ip=192.168.1.100/24,gw=192.168.1.1"

# Теги и окружение для управления VM
vm_tags     = ["terraform", "debian", "dev"]     # Теги для группировки и поиска VM
environment = "dev"                              # Окружение: dev, staging, prod